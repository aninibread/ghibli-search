{
	"name": "ghibli-search",
	"version": "1.0.0",
	"description": "A semantic search engine for Studio Ghibli movie stills, powered by Cloudflare AI",
	"author": "aninibread",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/aninibread/ghibli-search.git"
	},
	"keywords": [
		"studio-ghibli",
		"semantic-search",
		"cloudflare-workers",
		"react-router",
		"ai-search",
		"autorag"
	],
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
